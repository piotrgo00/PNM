<Window x:Class="PNM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PNM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" x:Name="Image"/>
        <Button x:Name="Set_file_path" Content="Draw" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Set_file_path_Click"/>
        <TextBox x:Name="file_input" Canvas.Left="46" TextWrapping="Wrap" Text="pbm-test-01.pbm" Canvas.Top="10" Width="526" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Margin="36,0,0,0"/>
        <Button x:Name="import_p1" Content="Import P1" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Click="import_p1_Click"/>
        <Button x:Name="import_p2" Content="Import P2" HorizontalAlignment="Left" Margin="0,45,0,0" VerticalAlignment="Top" Click="import_p2_Click"/>
        <Button x:Name="import_p3" Content="Import P3" HorizontalAlignment="Left" Margin="0,70,0,0" VerticalAlignment="Top" Click="import_p3_Click"/>
    </Grid>
</Window>
